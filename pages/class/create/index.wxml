<view class='class-create-container'>

    <cell-block title="选择年级">
      <van-row gutter="20" custom-class="rows">
        <van-col span="8" custom-class="gradeButton">
          <van-button type="default" size="normal" bindtap='chooseGrade'>幼小班</van-button>
        </van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="warning" size="normal">幼中班</van-button></van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="default" size="normal">幼大班</van-button></van-col>
      </van-row>
      <van-row gutter="20" custom-class="rows">
        <van-col span="8" custom-class="gradeButton">
          <van-button type="default" size="normal">一年级</van-button>
        </van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="default" size="normal">二年级</van-button></van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="default" size="normal">三年级</van-button></van-col>
      </van-row>      
      <van-row gutter="20" custom-class="rows">
        <van-col span="8" custom-class="gradeButton">
          <van-button type="default" size="normal">四年级</van-button>
        </van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="default" size="normal">五年级</van-button></van-col>
        <van-col span="8" custom-class="gradeButton"><van-button type="default" size="normal">六年级</van-button></van-col>
      </van-row>
    </cell-block>

    <cell-block title="填写班级名称"> 
      <van-field
          value=""
          center
          required
          label="班级名称"
          placeholder="输入班级名称，例如四一班"
          clearable
      />
   </cell-block>  

    <van-row gutter="20" custom-class="createButton">
      <van-col span="24" >
      <van-button bindtap='createClass' type="primary">创建班级</van-button>
      </van-col>
    </van-row>

    
    <view bindtap="cancel" class="mask" hidden="{{!showSelGrade}}">
    </view>

    <view class="picker-view" animation="{{animationAddressMenu}}" style="visibility:{{showSelGrade ? 'visible':'hidden'}}">
      <view style="height:10% ;width:95%;margin-top:20rpx">
        <text catchtap="cancel">取消</text>
        <text style="float: right" catchtap="confirmGrade">确定</text>
      </view>
      <picker-view style="width: 100%; height: 180px;" bindchange="changeGrade" value="{{value}}" wx:key="">
        <picker-view-column>
          <view wx:for="{{gradeList}}" wx:key="{{item.id}}" class="picker-item">
            {{item.name}}
          </view>
        </picker-view-column>
      </picker-view>
    </view>


</view>

