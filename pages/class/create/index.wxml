<view class='class-create-container'>

    <cell-block title="选择学校">
      <van-cell-group>
        <van-cell title="单元格" value="内容" />
      </van-cell-group>
    </cell-block>

    <cell-block title="选择年级">
     
        
        <van-cell title="年级" >
          <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
              <picker-view-column>
                <view wx:for="{{gradeList}}" style="line-height: 50px">{{item.name}}</view>
              </picker-view-column>
        </picker-view>

        </van-cell>
      
    </cell-block>


    <van-cell-group>
     
            <van-field
                value=""
                center
                label="班级名称"
                placeholder="请输入名称"
                clearable
            />
        

        <van-cell title="班级人数">
            <van-stepper
                value="20"
                integer
                min="5"
                max="200"
                step="1"
            />
        </van-cell>
    </van-cell-group>    
  
   


    <van-button bindtap='createClass'>创建班级</van-button>

</view>

