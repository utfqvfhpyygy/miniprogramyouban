<view class='class-create-container'>

    <cell-block title="选择学校">
      <van-cell-group>
        <van-cell title="单元格" value="内容" />
      </van-cell-group>
    </cell-block>

    
     
        
        <van-cell title="年级" >
          <van-button bindtap='toggleGradeSheet'>test11</van-button>

        </van-cell>
      
   


    <van-cell-group>
     
            <van-field
                value=""
                center
                label="班级名称"
                placeholder="请输入名称"
                clearable
            />
        

        <van-cell title="班级人数">
            <van-stepper
                value="20"
                integer
                min="5"
                max="200"
                step="1"
            />
        </van-cell>
    </van-cell-group>    
  
   


    <van-button bindtap='createClass'>创建班级</van-button>

    
    <view bindtap="cancel" class="mask" hidden="{{!showSelGrade}}">
    </view>

    <view class="picker-view" animation="{{animationAddressMenu}}" style="visibility:{{showSelGrade ? 'visible':'hidden'}}">
      <view style="height:10% ;width:95%;margin-top:20rpx">
        <text catchtap="cancel">取消</text>
        <text style="float: right" catchtap="confirmGrade">确定</text>
      </view>
      <picker-view style="width: 100%; height: 180px;" bindchange="changeGrade" value="{{value}}" wx:key="">
        <picker-view-column>
          <view wx:for="{{gradeList}}" wx:key="{{item.id}}" class="picker-item">
            {{item.name}}
          </view>
        </picker-view-column>
      </picker-view>
    </view>


</view>

