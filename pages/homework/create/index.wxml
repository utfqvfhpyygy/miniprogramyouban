<view class="container">
  
  <van-button type="primary" bindtap='chooseImage'>图片</van-button>
  <van-button type="primary" bindtap='chooseVoice'>音频</van-button>
  <van-button type="primary" bindtap='chooseVedio'>视频</van-button>
  <van-button type="primary" bindtap='chooseFile'>附件</van-button>


  <van-popup
    show="{{isShowRecordView}}"
    overlay="true"
    position="bottom"
    custom-class="bottom"
    bind:close="closeRecordView"
  >

      <van-button type="primary" bindtap='intRecord'>开始录音</van-button>
      <van-button type="primary" bindtap='endRecord'>结束录音</van-button>

  </van-popup>

</view>
